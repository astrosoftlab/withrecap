{
  "name": "recap",
  "version": "0.4.0",
  "description": "Meeting notes, on autopilot. Recap automatically takes notes in Google Meet, so you can focus on getting things done.",
  "private": true,
  "scripts": {
    "reset": "yarn workspaces run clean && rimraf .parcel-cache packages/*/node_modules node_modules",
    "eslint": "eslint ./packages --ext .ts,.tsx",
    "prettier": "prettier --check \"./packages/**/*.{ts,tsx,html,md}\" \"!**/*.d.ts\"",
    "prettier:fix": "prettier --write \"./packages/**/*.{ts,tsx,html,md}\" \"!**/*.d.ts\"",
    "test": "jest -c tests/jest.config.ts --passWithNoTests"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "18",
    "npm": "please-use-yarn",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.13",
    "@headlessui/tailwindcss": "^0.1.3",
    "@heroicons/react": "^2.0.17",
    "@hookform/resolvers": "^3.1.0",
    "@sentry/browser": "^7.50.0",
    "@sentry/node": "^7.50.0",
    "@sentry/react": "^7.50.0",
    "autoprefixer": "^10.4.14",
    "copy-to-clipboard": "^3.3.3",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "detect-browser": "^5.3.0",
    "firebase": "^9.21.0",
    "googleapis": "^118.0.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebaseui": "^6.0.0",
    "react-hook-form": "^7.43.9",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.10.0",
    "react-toastify": "^9.1.2",
    "styled-components": "^5.2.0",
    "tailwindcss": "^3.3.1",
    "yup": "^1.1.1"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.8.3",
    "@parcel/resolver-default": "^2.8.3",
    "@parcel/transformer-postcss": "^2.8.3",
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@parcel/validator-typescript": "^2.8.3",
    "@types/chrome": "^0.0.202",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "buffer": "^5.5.0",
    "eslint": "^8.31.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "parcel": "^2.8.3",
    "prettier": "^2.8.3",
    "process": "^0.11.10",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}