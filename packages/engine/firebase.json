{
  "functions": [
    {
      "source": "./",
      "codebase": "default",
      "ignore": [
        "node_modules",
        "config",
        "tests",
        "*-debug.log",
        "*-debug.*.log",
        ".runtimeconfig.json",
        "src",
        "tsconfig.json",
        "firebase.json",
        ".firebaserc",
        ".gitignore"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "storage": {
    "rules": "config/storage.rules"
  },
  "database": {
    "rules": "config/database.rules.json"
  }
}