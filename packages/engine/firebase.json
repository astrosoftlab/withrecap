{
  "functions": [
    {
      "source": "./",
      "codebase": "default",
      "ignore": ["node_modules", "config", "tests", "*-debug.log", "*-debug.*.log"],
      "predeploy": ["yarn build"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },
  "storage": {
    "rules": "config/storage.rules"
  }
}
