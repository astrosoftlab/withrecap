{
  "name": "@recap/engine",
  "version": "0.0.1",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production parcel build src/index.ts --dist-dir lib",
    "build:dev": "parcel build src/index.ts --dist-dir lib",
    "build:watch": "parcel watch src/index.ts --dist-dir lib",
    "clean": "rimraf lib",
    "start": "yarn build:dev && firebase functions:config:get > .runtimeconfig.json && firebase emulators:start --only functions",
    "deploy:all": "firebase deploy --only functions,firestore:rules,firestore:indexes",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "chatgpt": "^5.2.2",
    "date-fns": "^2.29.3",
    "firebase-admin": "^11.7.0",
    "firebase-functions": "^4.3.1",
    "form-data": "^4.0.0",
    "googleapis": "^118.0.0",
    "mailgun.js": "^8.2.1",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}