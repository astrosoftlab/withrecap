{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "noEmit": false,
    "allowJs": false,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "src",
    "outDir": "dist",

    "jsx": "react",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "ESNext"]
  }
}
