{
  "name": "@recap/extension",
  "version": "0.7.0",
  "description": "Chrome extension for reCap app",
  "private": true,
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost --port 3500",
    "clean": "rimraf dist",
    "prebuild": "yarn clean && yarn workspace @recap/shared build",
    "build": "NODE_ENV=production parcel build src/manifest.json --no-content-hash --no-cache --no-source-maps --detailed-report 0",
    "prepackage": "NODE_ENV=production ts-node -T --cwd misc package",
    "package": "zip -r dist.zip dist"
  },
  "dependencies": {
    "@recap/shared": "0.0.1"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@types/fs-extra": "^11.0.1",
    "dotenv": "^16.1.4",
    "fs-extra": "^11.1.1"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}