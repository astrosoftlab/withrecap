{
  "name": "@recap/extension",
  "version": "0.0.1",
  "description": "Chrome extension for reCap app",
  "private": true,
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost",
    "build": "rm -rf dist && yarn workspace @recap/shared build && NODE_ENV=production parcel build src/manifest.json --no-content-hash --no-cache --no-source-maps --detailed-report 0",
    "package": "zip -r dist.zip dist"
  },
  "dependencies": {
    "@recap/shared": "0.0.1"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.3",
    "@parcel/transformer-postcss": "^2.8.3",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.1"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
